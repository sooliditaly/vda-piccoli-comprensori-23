---
import { Image } from "astro:assets";

import seiGiornateImageIt from "../images/illustrazione-6-giornate-it.svg";
import seiGiornateImageEn from "../images/illustrazione-6-giornate-en.svg";
import seiGiornateFrImage from "../images/illustrazione-6-giornate-fr.svg";

import { loadTranslations } from "../utils/loadTranslations";
const { lang } = Astro.props;
const translations = loadTranslations(lang);

const seiGiornateImages = {
	it: seiGiornateImageIt,
	en: seiGiornateImageEn,
	fr: seiGiornateFrImage,
};
---

<style>
	.cose-grid {
		display: grid;
		grid-template-columns: 1fr;

		align-items: center;
		justify-items: center;
	}

	.sei-giornate {
		margin-top: var(--margin-large);
		max-width: 80%;
		height: auto;
	}

	.percorso-mobile {
		margin-bottom: var(--margin-large);
	}

	@media (min-width: 750px) {
		.cose-grid {
			column-gap: 8rem;
			row-gap: var(--margin-large);
		}

		.cose-grid .percorso-desktop {
			width: 90%;
			justify-self: flex-start;
		}

		.cose-grid {
			grid-template-columns: 1fr 1fr;
		}

		.sei-giornate {
			margin-top: 0;
		}
	}
</style>

<section class="intro">
	<div class="content">
		<div class="cose-grid">
			<div class="title-copy-cta">
				<h1>{translations.cose_title}</h1>
				<p set:html={translations.cose_p1} />
				<p set:html={translations.cose_p2} />
				<a href={translations.link_skiperformance} class="btn" target="_blank" id="cta-acquista-section-cose">{translations.acquista_online}</a>
			</div>

			<Image src={seiGiornateImages[lang]} alt={translations.sei_giornate_alt || "Illustrazione 6 giornate"} class="sei-giornate" />
		</div>
	</div>
</section>

---
import { Image } from "astro:assets";
import snowcareImage from "../images/footer-logo_snowcare.png";
import valleImage from "../images/footer-logo_valle-daosta.png";
import portaleImage from "../images/footer-ti_il-portale-dello-sci-it.svg";

import { loadTranslations } from "../utils/loadTranslations";
const { lang } = Astro.props;
const translations = loadTranslations(lang);
---

<style>
	.loghi {
		display: grid;
		grid-template-columns: 1fr;
		grid-template-rows: 100px;
		max-width: 60rem;
		margin: 0 auto;
		align-items: center;
		justify-items: center;
		row-gap: var(--margin-small);
		margin-bottom: var(--margin-standard);
		padding-left: var(--margin-small);
		padding-right: var(--margin-small);
	}

	.loghi .portale {
		/* grid-column-start: 1;
				grid-column-end: 2; */
		grid-column: 1 / span 2;
		width: 100%;
		height: 4rem;
	}

	.loghi .valle {
		width: auto;
		height: 9rem;
		justify-self: flex-start;
		margin-left: var(--margin-small);
	}

	.loghi .snowcare {
		width: auto;
		height: 7rem;
		justify-self: flex-end;
	}
</style>
<div class="loghi">
	<div>
		<Image src={snowcareImage} alt={translations.alt_snowcare} class="snowcare" />

		<a href="http://www.lovevda.it/" target="_blank">
			<Image src={valleImage} alt={translations.alt_valle_daosta} class="valle" />
		</a>
	</div>

	<Image src={portaleImage} alt={translations.alt_portale_sci} class="portale" />
</div>

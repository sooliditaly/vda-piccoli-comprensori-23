const baseUrl = lang === "it" ? "" : `/${lang}`;
const pathSegment = lang === "it" ? "comprensorio" : lang === "en" ? "resort" : "station";

const comprensoriSlugMap = {
	brusson: "brusson",
	valgrisenche: "valgrisenche",
	"rhemes-notre-dame": "rhemes-notre-dame",
	champorcher: "champorcher",
	cogne: "cogne",
	ollomont: "ollomont",
	antagnod: "antagnod",

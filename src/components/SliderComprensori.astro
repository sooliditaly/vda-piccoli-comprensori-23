	}

	.swiper-pagination {
		--swiper-theme-color: var(--azzurro);
		bottom: auto;
		top: auto;
		margin-top: var(--margin-smallest);
	}

	@media (min-width: 750px) {
		.swiper-pagination {
			margin-top: var(--margin-small);
		}

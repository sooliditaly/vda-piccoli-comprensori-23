---
import "../../styles/main.scss";

import AppShell from "../../layouts/AppShell.astro";

import Header from "../../sections/Header.astro";
import SliderComprensori from "../../sections/SliderComprensori.astro";
import LoghiBottom from "../../sections/LoghiBottom.astro";
import TariffeGrid from "../../sections/TariffeGrid.astro";
import IntroCose from "../../sections/IntroCose.astro";
import ComeUsufruire from "../../sections/ComeUsufruire.astro";
import Footer from "../../sections/Footer.astro";
import Enonetutto from "../../sections/Enonetutto.astro";
import MosaicoComprensori from "../../sections/MosaicoComprensori.astro";
---

<style>
	.comprensori-mobile {
		display: block;
	}

	.comprensori-desktop {
		display: none;
	}

	@media (min-width: 750px) {
		.comprensori-mobile {
			display: none;
		}

		.comprensori-desktop {
			display: block;
		}
	}
</style>

<AppShell lang="en">

	<Header lang="en" />

	<IntroCose lang="en" />

	<!-- Mobile: Slider -->
	<div class="comprensori-mobile">
		<SliderComprensori lang="en" />
	</div>

	<!-- Desktop: Mosaico -->
	<div class="comprensori-desktop">
		<MosaicoComprensori lang="en" />
	</div>

	<Enonetutto lang="en" />

	<ComeUsufruire lang="en" />

	<TariffeGrid lang="en" />

	<LoghiBottom lang="en" />

	<Footer lang="en" />

</AppShell>

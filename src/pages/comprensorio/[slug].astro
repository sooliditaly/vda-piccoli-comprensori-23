---
import AppShell from "../../layouts/AppShell.astro";
import ComprensorioDetail from "../../components/ComprensorioDetail.astro";
import { loadTranslations } from "../../utils/loadTranslations";

import comprensoriData from "../../data/comprensori-it.json";

export async function getStaticPaths() {
	return comprensoriData.map((comprensorio) => ({
		params: { slug: comprensorio.slug },
		props: { comprensorio }
	}));
}

const { comprensorio } = Astro.props;
const lang = "it";

const translations = loadTranslations(lang);
---

<AppShell lang={lang}>
	<ComprensorioDetail comprensorio={comprensorio} lang={lang} />
</AppShell>
